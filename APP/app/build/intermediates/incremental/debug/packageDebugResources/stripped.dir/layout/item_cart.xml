<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Image, Name, Price, Remove -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Product Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/gray_100">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/gray_200"
                    android:contentDescription="Product image" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 đ"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- Remove Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:minWidth="56dp"
                android:minHeight="56dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:backgroundTint="@color/error_light"
                android:contentDescription="Xóa khỏi giỏ"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconSize="24dp"
                app:iconTint="@color/error"
                app:iconPadding="0dp"
                app:elevation="2dp" />

        </LinearLayout>

        <!-- Quantity Controls - Moved to bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_quantity_container"
            android:padding="12dp">

            <TextView
                android:id="@+id/btnDecrease"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:minWidth="56dp"
                android:minHeight="56dp"
                android:gravity="center"
                android:text="−"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:contentDescription="Giảm số lượng"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_decrease_style"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="80dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/btnIncrease"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:minWidth="56dp"
                android:minHeight="56dp"
                android:gravity="center"
                android:text="+"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:contentDescription="Tăng số lượng"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_increase_style"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
